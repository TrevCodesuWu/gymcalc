@model addingFieldsLogin.ViewModels.GenderIdealWeightViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IdealWeightform</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: grey;
            padding:5px 20px; 
        }
    </style>
</head>
<body>
    <h2>Ideal Weight Calculator</h2>

    @using (Html.BeginForm("formsubmit", "IdealWeight"))
    {

        @Html.ValidationSummary(true, "Please fill in the required fields")
        <div class="form-group">
            @Html.LabelFor(c => c.idealweightvm.age)
            @Html.TextBoxFor(c => c.idealweightvm.age, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.idealweightvm.age)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.idealweightvm.height)
            @Html.TextBoxFor(c => c.idealweightvm.height, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.idealweightvm.height)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.idealweightvm.GenderId)
            @Html.DropDownListFor(c => c.idealweightvm.GenderId, new SelectList(Model.genderlistvm, "id", "gender"), "Select Gender", new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.idealweightvm.GenderId)
        </div>

        @Html.AntiForgeryToken()
        <button class="btn btn-primary" type="submit">Calculate</button>

    }
    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
