@model addingFieldsLogin.ViewModels.UserGenderViewModel

@{
    ViewBag.Title = "Calcform";
}

<h2>BMI-Calculator</h2>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@using (Html.BeginForm("formsubmit", "Users"))
{

    @Html.ValidationSummary(true, "Please fill in the required fields")

    <div class="form-group">
        @Html.LabelFor(c => c.user.age)
        @Html.TextBoxFor(c => c.user.age, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.user.weight)
        @Html.TextBoxFor(c => c.user.weight, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.user.height)
        @Html.TextBoxFor(c => c.user.height, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.user.GenderId)
        @Html.DropDownListFor(c => c.user.GenderId, new SelectList(Model.genderList, "id", "gender"), "Select Gender", new { @class = "form-control" })
    </div>

    @Html.AntiForgeryToken()
    <button class="btn btn-primary" type="submit">Calculate</button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
