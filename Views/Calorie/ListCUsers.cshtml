@model IEnumerable<addingFieldsLogin.Models.CalorieUser>

@{
    ViewBag.Title = "ListCUsers1";
}

<style>
    .specialdata {
        background-color: lightgreen;
    }

    .specialheading {
        background-color: green;
    }

    td, th {
        background-color: silver;
    }
</style>
<h2 style="color:white;">User Calorie Log</h2>

<table  class="table table-condensed table-bordered">
    <thead>
        <tr class="HeadRow">
            <th>User Email</th>
            <th>Age</th>
            <th>Height</th>
            <th>Weight</th>
            <th class="specialheading">Calorie Sum</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.EmailLogin</td>
                <td>@c.age</td>
                <td>@c.height <b>cm</b></td>
                <td>@c.weight <b>kg</b></td>
                <td class="specialdata">@c.caloriessum</td>
                <td>@Html.ActionLink("delete","delete","Calorie" , new { id = c.id },null)</td>
            </tr>
        }
    </tbody>
</table>

<table id="maindiv" class="table table-condensed table-bordered"style="display:none;">
    <thead>
        <tr class="HeadRow">
            <th>User Email</th>
            <th>Age</th>
            <th>Height</th>
            <th>Weight</th>
            <th class="specialheading">Calorie Sum</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.EmailLogin</td>
                <td>@c.age</td>
                <td>@c.height <b>cm</b></td>
                <td>@c.weight <b>kg</b></td>
                <td class="specialdata">@c.caloriessum</td>
            </tr>
        }
    </tbody>
</table>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#maindiv').DataTable({                            //Remember to change the table name or it wont work //
                paging: true,
                "info": false,
                searching: false,
                dom: 'Bfrtip',
                buttons: [
                    { extend: 'copy', className: 'btn btn-secondary glyphicon glyphicon-duplicate' },
                    { extend: 'csv', className: 'btn btn-primary glyphicon glyphicon-save-file' },
                    { extend: 'excel', className: 'btn btn-success glyphicon glyphicon-list-alt' },
                    { extend: 'pdf', className: 'btn btn-danger glyphicon glyphicon-file' },
                    { extend: 'print', className: 'btn btn-warning glyphicon glyphicon-print' }
                ]
            });
        });
    </script>


}