
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Result</title>
    <script src="https://kit.fontawesome.com/b4662c256f.js" crossorgin="anonymous"></script> <!-- font icons -->
    <style>
        * {
            padding: 0px;
            margin: 0px;
            box-sizing:border-box; 
        }
        .div1 {
            width:100%; 
            height:100vh; 
            padding:0px; 
            margin:0px; 
            display:flex ;justify-content:center; align-items:center ; flex-direction:column ;
            
        }
        .divheader {
            width: 100%;
            padding: 10px 15px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-size: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .divicon {
            width: 100%;
            padding: 10px 15px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-size: 35px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .div2 {
            position:absolute; top:10px ; left:10px; 
            padding: 5px 15px; 
            border-radius:5px ;
            border:2px solid white; 
        }
        .link {
            text-transform: none;
            text-decoration: none;
            font-family:'OCR A'; 
            color:lightgrey;  
        }
    </style>
</head>
<body>
    <div class="div1"> 
        <div class="divheader">
            <h2>Feedback has been sent</h2>
        </div>
        <div class="divicon">
            <i class="fa-solid fa-envelope-circle-check"></i>
        </div>
    </div>
    <div class="div2">
        @Html.ActionLink("Back to Home", "CalculatorHome", "Home", new { @class = "link" })

    </div>
</body>
</html>
